{
  "extends": ["tslint:recommended", "tslint-etc", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "ban": [true, "useLayoutEffect"],
    "deprecation": true,
    "import-blacklist": [true, "react-use"],
    "interface-name": false,
    "interface-over-type-literal": false,
    "jsx-no-lambda": false,
    "max-line-length": [
      true,
      {
        "ignore-pattern": "^import |^describe\\(| it\\(",
        "limit": 120
      }
    ],
    "no-const-enum": true,
    "no-inferrable-types": true,
    "no-namespace": false,
    "no-restricted-globals": [true, "$", "event", "jQuery", "length", "name"],
    "space-within-parens": [true, 0],
    "variable-name": [false, "allow-leading-underscore"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-console": false
  }
}
